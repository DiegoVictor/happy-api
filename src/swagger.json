            "type": "string"
          },
          "open_on_weekends": {
            "type": "boolean"
          },
          "whatsapp": {
            "type": "string"
          },
          "images": {
            "type": "array",
            "items": {
              "properties": {
                "id": {
                  "type": "integer"
                },
                "path": {
                  "type": "string"
                }
              }
            }
          },
          "url": {
            "type": "string"
          }
        }
      },
      "Error": {
        "properties": {
          "message": {
            "type": "string"
          }
        }
      }
    },
